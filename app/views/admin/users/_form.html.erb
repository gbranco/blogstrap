<%= form_for [:admin,@user],:html => {:class => 'form-horizontal'}  do |f| %>
    <%= error_message_for(@user) %>
    <%= form_field_control_label_and_input(:user, :name, f.text_field(:name, :class => 'input-xlarge'), {:label_name => 'Nome'})%>
    <%= form_field_control_label_and_input(:user, :email, f.email_field(:email, :class => 'input-xlarge'), {:label_name => 'Email'})%>
    <%= form_field_control_label_and_input(:user, :password, f.password_field(:password, :class => 'input-xlarge'), {:label_name => 'Password'})%>
    <%= form_field_control_label_and_input(:user, :password_confirmation, f.password_field(:password_confirmation, :class => 'input-xlarge'), {:label_name => 'Confirmação'})%>
    <%= form_field_control_label_and_input(:user, :situation, f.check_box(:situation) , {:label_name => 'Ativo?'})%>
    <%= show_select(f, @roles, :label_name => 'Selecione a Role') if current_user.is_role?(:administrador)%>
    <%= submit_and_back_buttons(admin_users_path,{:label_name => label_name}) %>
<% end %>

